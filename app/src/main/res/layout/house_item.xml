<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    tools:showIn="@layout/fragment_houses">

    <ImageView
        android:id="@+id/houseLstImg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_home" />

    <TextView
        android:id="@+id/houseLstTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/houseLstImg"
        android:layout_toEndOf="@+id/houseLstImg"
        android:textColor="@color/darkGray"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/houseLstAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/houseLstTitle"
        android:layout_toEndOf="@+id/houseLstImg"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/darkGray"
        android:layout_marginStart="16dp"
        android:textSize="16sp" />


</RelativeLayout>